%head
  %title
    - # Accessibility tip: Page titles should be unique and meaningful to the page and include the site name.
    - # Home page title can just be the site name.
    - page_title =  I18n.t(:page_title_application_home)
    - if @page_title
      - page_title =  "#{@page_title}"
    &= strip_tags(page_title)
  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag "application"
  = csrf_meta_tags
  %meta#ctl00_meta_IE{:content => "IE=8", "http-equiv" => "x-ua-compatible"}/
  %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
  :javascript
    function ActiveLink(name)
    {
    document.getElementById(name+'_l').className = 'left_side_active';
    document.getElementById(name+'_r').className = 'right_side_active';
    document.getElementById(name+'_m').className = 'middle_side_active';
    /*
    if (document.getElementById(name+'_sub'))
    document.getElementById(name+'_sub').style.display='';
    */
    }
    function trim(stringToTrim) {
    return stringToTrim.replace(/^\s+|\s+$/g,"");
    }       
